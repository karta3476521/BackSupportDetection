<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 點擊之後 -->
    <item
        android:state_pressed="true">
        <layer-list>
            <!-- 第一層 -->
            <item
                android:left="4dp" android:top="4dp">
                <shape android:shape="rectangle" >
                    <!--設定背景色-->
                    <solid android:color="#D3D3D3" />
                    <!--設定圓角-->
                    <corners android:radius="30dp" />
                    <!--設定邊框線的寬度和顏色-->
                    <stroke android:width="1dp" android:color="#C0C0C0" />
                </shape>
            </item>
            <!-- 第二層 -->
            <item
                android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle" >
                    <!--設定背景色-->
                    <solid android:color="#ff9912"/>
                    <!--設定圓角-->
                    <corners android:radius="30dp"/>
                    <!--設定邊框線的寬度和顏色-->
                    <stroke android:width="1dp" android:color="#ff9912" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 正常狀態 -->
    <item>
        <layer-list>
            <!-- 第一層 -->
            <item
                android:left="4dp" android:top="4dp">
                <shape android:shape="rectangle" >
                    <!--設定背景色-->
                    <solid android:color="#C0C0C0" />
                    <!--設定圓角-->
                    <corners android:radius="30dp" />
                    <!--設定邊框線的寬度和顏色-->
                    <stroke android:width="1dp" android:color="#C0C0C0" />
                </shape>
            </item>
            <!-- 第二層 -->
            <item
                android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle" >
                    <!--設定背景色-->
                    <solid android:color="#ff9912"/>
                    <!--設定圓角-->
                    <corners android:radius="30dp"/>
                    <!--設定邊框線的寬度和顏色-->
                    <stroke android:width="1dp" android:color="#ff9912" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>